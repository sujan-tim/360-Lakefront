# Prisma (Postgres recommended for Vercel)
# Example:
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require"
DATABASE_URL="postgresql://user:password@host:5432/db?sslmode=require"

# Stripe (Test keys recommended for development)
STRIPE_SECRET_KEY="sk_test_your_key_here"

# Optional (recommended): enable webhook to mark bookings as PAID
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Note: Prefer Stripe Checkout Sessions (dynamic totals) over Payment Links.
# Payment Links are static and wonâ€™t reflect selected dates/nights.

# eSewa (UAT test by default)
# Set ESEWA_ENV to "prod" when switching to production.
# ESEWA_ENV="uat"
# ESEWA_PRODUCT_CODE="EPAYTEST"
# ESEWA_SECRET_KEY="your_esewa_secret_key_here"

# Admin notifications (email)
ADMIN_EMAIL="admin@example.com"
RESEND_API_KEY="re_your_key_here"
# Optional: must be a verified sender/domain in Resend for production
RESEND_FROM="onboarding@resend.dev"
# Optional: where customer replies go (defaults to ADMIN_EMAIL if unset)
RESEND_REPLY_TO="admin@example.com"
